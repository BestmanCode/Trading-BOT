#! /bin/bash

INSTALLATION_DIR=/usr/local/TradingBot

start()
{
  nohup python3 -u ${INSTALLATION_DIR}/scripts/trading_bot.py > ${INSTALLATION_DIR}/log.txt 2>&1 & echo $! > ${INSTALLATION_DIR}/pid.txt
}

stop()
{
  cat ${INSTALLATION_DIR}/pid.txt | xargs kill
}

case $1 in
  start|stop) "$1" ;;
esac
